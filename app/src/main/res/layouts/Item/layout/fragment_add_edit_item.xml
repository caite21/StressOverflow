<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/subtle_grey"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        >
        <TextView
            android:id="@+id/add__item__fragment__title__header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item_fragment_title_header"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/add_item_fragment_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="@drawable/sagi_edit_text"
            android:hint="Item Name"
            android:paddingStart="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        >
        <TextView
            android:id="@+id/add__item__fragment__make__header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item_fragment_make_header"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/add_item_fragment_edit_make"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/sagi_edit_text"
                android:layout_marginEnd="10dp"
                android:hint="Make"
                android:paddingStart="12dp"
                />
            <EditText
                android:id="@+id/add_item_fragment_edit_model"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/sagi_edit_text"
                android:layout_marginStart="10dp"
                android:hint="Model"
                android:paddingStart="12dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        >
        <TextView
            android:id="@+id/add__item__fragment__description__header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item_fragment_description_header"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/add_item_fragment_edit_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_weight="1"
                android:maxHeight="150dp"
                android:background="@drawable/sagi_edit_text"
                android:layout_marginEnd="10dp"
                android:hint="Description"
                android:paddingStart="12dp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_year_header"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/add_item_fragment_edit_year"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/sagi_edit_text"
                android:hint="YYYY"
                android:paddingStart="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_month_header"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/add_item_fragment_edit_month"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/sagi_edit_text"
                android:hint="MM"
                android:paddingStart="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_date_header"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/add_item_fragment_edit_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/sagi_edit_text"
                android:hint="DD"
                android:paddingStart="12dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item_fragment_value_header"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/add_item_fragment_edit_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/sagi_edit_text"
            android:hint="1000"
            android:paddingStart="12dp"
            />
    </LinearLayout>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        >
        <TextView
            android:id="@+id/add__item__fragment__comment__header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item_fragment_comment_header"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/add_item_fragment_edit_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:maxHeight="150dp"
            android:background="@drawable/sagi_edit_text"
            android:hint="Comment (optional)"
            android:paddingStart="12dp"
            />
      
      </LinearLayout>
  
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:layout_marginTop="8dp">

              <TextView
                  android:id="@+id/add__item__fragment__tag__header"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@string/add_item_fragment_tag_header"
                  android:textSize="20dp"
                  android:textStyle="bold" />

              <Button
                  android:id="@+id/add_item_fragment_add_tag_button"
                  android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:background="@drawable/sagi_button"
                  android:text="@string/tag_editTags"
                  app:backgroundTint="@null" />

              <Button
                  android:id="@+id/add_item_fragment_refresh_tags_button"
                  android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_marginLeft="5dp"
                  android:background="@drawable/sagi_button"
                  android:text="@string/tag_refreshTags"
                  app:backgroundTint="@null" />
          </LinearLayout>

          <com.google.android.material.chip.ChipGroup
              android:id="@+id/add_item_fragment_chipGroup"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp">

          </com.google.android.material.chip.ChipGroup>

      </LinearLayout>

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            >
            <TextView
                android:id="@+id/add__item__fragment__picture__header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_item_fragment_picture_header"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                />
            <Button
                android:id="@+id/add_item_fragment_edit_pictures"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/sagi_button"
                android:text="@string/add_item_fragment_picture_button_text"
                app:backgroundTint="@null"
                android:layout_weight="2"
                android:layout_marginStart="10dp"
                />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        >
        <TextView
            android:id="@+id/add__item__fragment__serial__header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item_fragment_serial_header"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/add_item_fragment_edit_serial"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/sagi_edit_text"
                android:hint="123456123456"
                android:paddingHorizontal="12dp"
                android:inputType="text"
                android:maxLines="1"
                />
            <Button
                android:id="@+id/add__item__fragment__button__serial"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/sagi_button"
                android:layout_marginStart="10dp"
                android:text="@string/add_item_fragment_serial_button"
                app:backgroundTint="@null"
                />

            <Button
                android:id="@+id/add_item_fragment_button_lookup"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="@drawable/sagi_button"
                android:text="@string/add_item_fragment_lookup_button"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


</ScrollView>